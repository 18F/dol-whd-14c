<?xml version="1.0" encoding="utf-8" ?>
<parameters>
  <parameter name="UserLockoutEnabledByDefault" defaultValue="true">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='UserLockoutEnabledByDefault']/@value" />
  </parameter>
  <parameter name="PasswordExpirationDays" defaultValue="90">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='PasswordExpirationDays']/@value" />
  </parameter>
  <parameter name="DefaultAccountLockoutTimeSpan" defaultValue="15">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='DefaultAccountLockoutTimeSpan']/@value" />
  </parameter>
  <parameter name="MaxFailedAccessAttemptsBeforeLockout" defaultValue="3">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='MaxFailedAccessAttemptsBeforeLockout']/@value" />
  </parameter>
  <parameter name="AccessTokenExpireTimeSpanMinutes" defaultValue="20160">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='AccessTokenExpireTimeSpanMinutes']/@value" />
  </parameter>
  <parameter name="EmailVerifyAndPaswordResetTokenExpireHours" defaultValue="6">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='EmailVerifyAndPaswordResetTokenExpireHours']/@value" />
  </parameter>
  <parameter name="AccessTokenExpireTimeSpanMinutes" defaultValue="3">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='AccessTokenExpireTimeSpanMinutes']/@value" />
  </parameter>
  <parameter name="ConnectionString" defaultValue="ConnectionString">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/connectionStrings/add[@name='ApplicationDbContext']/@connectionString" />
  </parameter>  
  <parameter name="AttachmentRepositoryRootFolder" defaultValue="AttachmentRepositoryRootFolder">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='AttachmentRepositoryRootFolder']/@value" />
  </parameter>
  <parameter name="AllowedFileNamesRegex" defaultValue="^.*\.(doc|docx|xls|pdf|jpg|jpeg|png|csv)$">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='AllowedFileNamesRegex']/@value" />
  </parameter>
  <parameter name="AllowedMaximumContentLength" defaultValue="5242880">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='AllowedMaximumContentLength']/@value" />
  </parameter>
  <parameter name="SMTPServer" defaultValue="localhost">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/system.net/mailSettings/smtp/network/@host" />
  </parameter>
  <parameter name="SMTPPort" defaultValue="25">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/system.net/mailSettings/smtp/network/@port" />
  </parameter>
  <parameter name="SMTPUserName" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/system.net/mailSettings/smtp/network/@userName" />
  </parameter>
  <parameter name="SMTPPassword" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/system.net/mailSettings/smtp/network/@password" />
  </parameter>
  <parameter name="EmailFrom" defaultValue="no-reply@dol.gov">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/system.net/mailSettings/smtp/@from" />
  </parameter>
  <parameter name="RequireHttps" defaultValue="true">
    <parameterEntry kind="XmlFile" scope="web\.config$" match="/configuration/appSettings/add[@key='RequireHttps']/@value" />
  </parameter>
</parameters>